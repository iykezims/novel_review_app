<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
<div id="rating-form">
<div><label>Rating</label></div>
</div>	
<p><%= f.input :comment %></p>
<%= f.button :submit, :class => "btn-custom2" %>

<% end %>
<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>
